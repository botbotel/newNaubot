---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const infos = await getCollection('infos')
---

<Layout title="Naubot">
	<h1 class="flex text-[#00CDCD] my-10 text-4xl font-bold justify-center">
    	Bienvenidos a Naubot tu programa de gestión náutica
	</h1>

<div class="flex justify-between py-10">
	{
		infos.map(info => {
			const { data } = info
			const { img, name, description } = data

			return(
				<div class="card">
					<svg  xmlns="http://www.w3.org/2000/svg"  width="50"  height="50"  viewBox="0 0 24 24"  fill="none"  stroke= "#00CDCD"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-help-hexagon"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.875 6.27c.7 .398 1.13 1.143 1.125 1.948v7.284c0 .809 -.443 1.555 -1.158 1.948l-6.75 4.27a2.269 2.269 0 0 1 -2.184 0l-6.75 -4.27a2.225 2.225 0 0 1 -1.158 -1.948v-7.285c0 -.809 .443 -1.554 1.158 -1.947l6.75 -3.98a2.33 2.33 0 0 1 2.25 0l6.75 3.98h-.033z" /><path d="M12 16v.01" /><path d="M12 13a2 2 0 0 0 .914 -3.782a1.98 1.98 0 0 0 -2.414 .483" /></svg>
					<h3 class="text-lg font-bold">{name}</h3>
					<p class="w-80">{description}</p>
				</div>
			)
		})
	}
</div>

</Layout>


<style>

.card {
	display: flex;
	padding: 20px;
	margin: 20px;
	text-align: center;
	flex-direction: column;
	align-items: center;
	color: #00CDCD;
	border: 5px solid #00CDCD;
	border-radius: 10px;
	box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
}


</style>